#!/usr/bin/env bash
set -eu

if [[ -f gradlew ]]; then
    ./gradlew "$@"
else
    readonly project_dir=$(pwd)

    while [[ ! -f gradlew && "$(pwd)" != / ]]; do
        cd ..
    done

    if [[ -f gradlew ]]; then
        ./gradlew --project-dir="${project_dir}" "$@"
    else
        exit 69 # EX_UNAVAILABLE
    fi
fi
