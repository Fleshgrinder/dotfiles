#!/usr/bin/env bash
set -Eeuo pipefail

for arg in "$@"; do
    case "$arg" in
    -h | --help)
        cat <<USAGE
Setup global editor.

Usage:
  setup-editor [-h | --help]

Options:
  -h --help  display this help and exit
USAGE
        exit 0
        ;;
    esac
done

read -e -i nvim -p 'EDITOR: ' -r editor
[[ "$editor" == '' ]] || exec setenv EDITOR "$editor"
