#!/usr/bin/env bash
set -Eeuo pipefail

JAVA_HOME=$(jenv javahome)
export JAVA_HOME

if [[ -f mvnw ]]; then
    exec ./mvnw "$@"
else
    readonly project_dir=$PWD

    while [[ ! -f mvnw && "$PWD" != / ]]; do
        cd ..
    done

    if [[ -f mvnw ]]; then
        exec ./mvnw --projects "$(realpath --relative-to="$PWD" "$project_dir")" "$@"
    else
        exec /usr/local/opt/bin/mvn "$@"
    fi
fi
